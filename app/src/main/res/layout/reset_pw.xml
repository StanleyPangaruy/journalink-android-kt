<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background circles on the left side -->
    <View
        android:id="@+id/leftCircle1"
        android:layout_width="50dp"
        android:layout_height="190dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/circle_upper_left2" />

    <View
        android:id="@+id/leftCircle2"
        android:layout_width="50dp"
        android:layout_height="150dp"
        android:background="@drawable/circle_upper_left2"
        android:layout_marginStart="0dp"
        android:layout_marginTop="590dp" />

    <!-- Background circles on the right side -->
    <View
        android:id="@+id/rightCircle1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/circle_bg"
        android:layout_marginStart="270dp"
        android:layout_marginTop="90dp" />

    <View
        android:id="@+id/rightCircle2"
        android:layout_width="183dp"
        android:layout_height="220dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="593dp"
        android:background="@drawable/circle_bg" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/resetPWCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    app:srcCompat="@drawable/reset_password" />

                <TextView
                    android:id="@+id/resetPWDescripText"
                    style="@style/CustomEditTextStyle"
                    android:layout_width="292dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Password must be above 8 characters long and a combination of uppercase letters, lowercase letters, numbers, and symbols."
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/LockIcon"
                    android:layout_width="230dp"
                    android:layout_height="235dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/lock_icon" />

                <FrameLayout
                    android:id="@+id/newPWEditTextContainer"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_frame_layout"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <ImageView
                        android:layout_width="29dp"
                        android:layout_height="29dp"
                        android:layout_gravity="start|center_vertical"
                        android:padding="4dp"
                        app:srcCompat="@drawable/key_icon" />

                    <EditText
                        android:id="@+id/newPWEditText"
                        style="@style/CustomEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@null"
                        android:hint="New Password"
                        android:textColor="@color/black" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/confirmPWTextContainer"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_frame_layout"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <ImageView
                        android:layout_width="29dp"
                        android:layout_height="29dp"
                        android:layout_gravity="start|center_vertical"
                        android:padding="4dp"
                        app:srcCompat="@drawable/key_icon" />

                    <EditText
                        android:id="@+id/confirmPWEditText"
                        style="@style/CustomEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@null"
                        android:hint="Confirm Password"
                        android:textColor="@color/black" />

                </FrameLayout>

                <ImageButton
                    android:id="@+id/confirmButton"
                    style="@style/ConfirmButton"
                    android:src="@null" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>