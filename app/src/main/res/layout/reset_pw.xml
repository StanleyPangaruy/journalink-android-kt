<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background circles on the left side -->
    <View
        android:id="@+id/leftCircle1"
        android:layout_width="80dp"
        android:layout_height="230dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/circle_upper_left2" />

    <View
        android:id="@+id/leftCircle2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/circle_lower_left"
        android:layout_marginStart="0dp"
        android:layout_marginTop="685dp" />

    <!-- Background circles on the right side -->
    <View
        android:id="@+id/rightCircle1"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:background="@drawable/circle_bg"
        android:layout_marginStart="290dp"
        android:layout_marginTop="230dp" />

    <View
        android:id="@+id/rightCircle2"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="270dp"
        android:layout_marginTop="630dp"
        android:background="@drawable/circle_bg" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/resetPWCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            app:srcCompat="@drawable/reset_password"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/resetPWDescripText"
            style="@style/CustomEditTextStyle"
            android:layout_width="292dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Password must be above 8 characters long and a combination of uppercase letters, lowercase letters, numbers, and symbols."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/resetPWCode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/LockIcon"
            android:layout_width="230dp"
            android:layout_height="235dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/lock_icon"
            app:layout_constraintTop_toBottomOf="@+id/resetPWDescripText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <FrameLayout
            android:id="@+id/newPWEditTextContainer"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_margin="8dp"
            android:layout_marginBottom="15dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@drawable/rounded_frame_layout"
            app:layout_constraintBottom_toTopOf="@+id/confirmPWTextContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LockIcon">

            <ImageView
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_gravity="start|center_vertical"
                android:padding="4dp"
                app:srcCompat="@drawable/key_icon" />

            <EditText
                android:id="@+id/newPWEditText"
                style="@style/CustomEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@null"
                android:hint="New Password"
                android:textColor="@color/black" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/confirmPWTextContainer"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_margin="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@drawable/rounded_frame_layout"
            app:layout_constraintBottom_toTopOf="@+id/confirmButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newPWEditTextContainer">

            <ImageView
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_gravity="start|center_vertical"
                android:padding="4dp"
                app:srcCompat="@drawable/key_icon" />

            <EditText
                android:id="@+id/confirmPWEditText"
                style="@style/CustomEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@null"
                android:hint="Confirm Password"
                android:textColor="@color/black" />

        </FrameLayout>

        <ImageButton
            android:id="@+id/confirmButton"
            style="@style/ConfirmButton"
            android:src="@null"
            app:layout_constraintTop_toBottomOf="@+id/confirmPWTextContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
