<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background circles on the left side -->
    <View
        android:id="@+id/leftCircle1"
        android:layout_width="50dp"
        android:layout_height="190dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/circle_upper_left2" />

    <View
        android:id="@+id/leftCircle2"
        android:layout_width="50dp"
        android:layout_height="150dp"
        android:background="@drawable/circle_upper_left2"
        android:layout_marginStart="0dp"
        android:layout_marginTop="590dp" />

    <!-- Background circles on the right side -->
    <View
        android:id="@+id/rightCircle1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/circle_bg"
        android:layout_marginStart="270dp"
        android:layout_marginTop="90dp" />

    <View
        android:id="@+id/rightCircle2"
        android:layout_width="183dp"
        android:layout_height="220dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="593dp"
        android:background="@drawable/circle_bg" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/appLogo"
                    android:layout_width="230dp"
                    android:layout_height="215dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="105dp"
                    android:layout_marginBottom="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/journalink_app_logo" />

                <TextView
                    android:id="@+id/shareYourThoughtsText"
                    style="@style/CustomEditTextStyle"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Share your thoughts with"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/appName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/journalinkname_txt" />

                <TextView
                    android:id="@+id/appDescripText"
                    style="@style/CustomEditTextStyle"
                    android:layout_width="350dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Step into the realm of JournaLink and let your voice resonate. Unleash your thoughts, inspire others, and become part of a community that cherishes the transformative power of self-reflection. Begin your journey today, and let your stories unfold."
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <ImageButton
                    android:id="@+id/getStartedButton"
                    style="@style/GetStartedButton"
                    android:src="@null" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>