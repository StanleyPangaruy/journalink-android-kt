<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background circles on the left side -->
    <View
        android:id="@+id/leftCircle1"
        android:layout_width="40dp"
        android:layout_height="190dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/circle_upperleft" />

    <View
        android:id="@+id/leftCircle2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/circle_lower_left"
        android:layout_marginStart="0dp"
        android:layout_marginTop="615dp" />

    <!-- Background circles on the right side -->
    <View
        android:id="@+id/rightCircle1"
        android:layout_width="60dp"
        android:layout_height="190dp"
        android:background="@drawable/circle_upper_right"
        android:layout_marginStart="333dp"
        android:layout_marginTop="190dp" />

    <View
        android:id="@+id/rightCircle2"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/circle_lower_right"
        android:layout_marginStart="253dp"
        android:layout_marginTop="573dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="230dp"
                    android:layout_height="215dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/journalink_app_logo" />

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/journalinkname_txt" />

                <ImageButton
                    android:id="@+id/loginButton"
                    android:layout_width="361dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@null"
                    android:src="@drawable/login_btn" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>