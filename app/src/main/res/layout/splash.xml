<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash" >

    <!-- Background circles on the left side -->
    <ImageView
        android:id="@+id/leftCircle1"
        android:layout_width="55dp"
        android:layout_height="180dp"
        android:layout_marginStart="0dp"
        android:background="@drawable/circle_upper_left2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Background circles on the right side -->

    <!-- App logo -->

    <ImageView
        android:id="@+id/leftCircle2"
        android:layout_width="55dp"
        android:layout_height="180dp"
        android:background="@drawable/circle_upper_left2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.938" />

    <!-- Share your thoughts text -->

    <ImageView
        android:id="@+id/rightCircle1"
        android:layout_width="143dp"
        android:layout_height="142dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="-100dp"
        android:background="@drawable/circle_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.908"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/leftCircle1"
        app:layout_constraintVertical_bias="0.015" />

    <ImageView
        android:id="@+id/rightCircle2"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:layout_marginEnd="-100dp"
        android:layout_marginBottom="-50dp"
        android:background="@drawable/circle_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <!-- App name -->

    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="180dp"
        android:layout_height="170dp"
        android:layout_marginTop="90dp"
        android:scaleType="centerCrop"
        android:src="@drawable/journalink_app_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/leftCircle1"
        app:layout_constraintVertical_bias="0.04" />

    <TextView
        android:id="@+id/shareYourThoughtsText"
        style="@style/CustomEditTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share your thoughts with"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.421" />

    <ImageView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.544"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/journalinkname_txt" />

    <!-- App description text -->

    <!-- Get started button -->

    <TextView
        android:id="@+id/appDescripText"
        style="@style/CustomEditTextStyle"
        android:layout_width="309dp"
        android:layout_height="167dp"
        android:text="Step into the realm of JournaLink and let your voice resonate. Unleash your thoughts, inspire others, and become part of a community that cherishes the transformative power of self-reflection. Begin your journey today, and let your stories unfold."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.716" />

    <ImageButton
        android:id="@+id/getStartedButton"
        style="@style/GetStartedButton"
        android:layout_width="341dp"
        android:layout_height="65dp"
        android:src="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.888" />

</androidx.constraintlayout.widget.ConstraintLayout>
