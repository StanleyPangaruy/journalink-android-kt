<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background circles on the left side -->
    <View
        android:id="@+id/leftCircle1"
        android:layout_width="80dp"
        android:layout_height="230dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/circle_upper_left2" />

    <View
        android:id="@+id/leftCircle2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/circle_lower_left"
        android:layout_marginStart="0dp"
        android:layout_marginTop="685dp" />

    <!-- Background circles on the right side -->
    <View
        android:id="@+id/rightCircle1"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:background="@drawable/circle_bg"
        android:layout_marginStart="290dp"
        android:layout_marginTop="230dp" />

    <View
        android:id="@+id/rightCircle2"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="270dp"
        android:layout_marginTop="630dp"
        android:background="@drawable/circle_bg" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- returning arrow -->
        <ImageButton
            android:id="@+id/arrow"
            android:layout_width="26dp"
            android:layout_height="27dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/return_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/forgotPWCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/code_has_been_sent_"
            app:layout_constraintTop_toBottomOf="@+id/arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/codeDescripText"
            style="@style/CustomEditTextStyle"
            android:layout_width="292dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="For your security, a verification code has been sent to your email to reset your password."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/forgotPWCode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/emailSentIcon"
            android:layout_width="230dp"
            android:layout_height="235dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/email_sent_icon"
            app:layout_constraintTop_toBottomOf="@+id/codeDescripText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <FrameLayout
            android:id="@+id/usernameEditTextContainer"
            android:layout_width="359dp"
            android:layout_height="46dp"
            android:layout_margin="8dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_frame_layout"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:layout_constraintBottom_toTopOf="@+id/verifyButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailSentIcon"
            app:layout_constraintVertical_bias="1.0">

            <ImageView
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_gravity="start|center_vertical"
                android:padding="4dp"
                app:srcCompat="@drawable/code_icon" />

            <EditText
                android:id="@+id/codeEditText"
                style="@style/CustomEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@null"
                android:hint="Enter the 4 Digit Code"
                android:textColor="@color/black" />

        </FrameLayout>

        <ImageButton
            android:id="@+id/verifyButton"
            style="@style/VerifyButton"
            android:layout_marginTop="10dp"
            android:src="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/usernameEditTextContainer" />

        <TextView
            android:id="@+id/didntReceiveTheCodeText"
            style="@style/CustomEditTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="D i d n ' t  r e c e i v e  t h e  c o d e ?"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/verifyButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/resendText"
            style="@style/CustomEditTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="R e s e n d"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:textStyle="bold"
            android:shadowColor="@color/black"
            android:shadowDx="7"
            android:shadowDy="10"
            android:shadowRadius="35"
            app:layout_constraintTop_toBottomOf="@+id/didntReceiveTheCodeText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
