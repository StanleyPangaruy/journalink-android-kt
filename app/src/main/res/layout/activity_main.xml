<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background circles on the left side -->
    <View
        android:id="@+id/leftCircle1"
        android:layout_width="40dp"
        android:layout_height="190dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/circle_upperleft" />

    <View
        android:id="@+id/leftCircle2"
        android:layout_width="104dp"
        android:layout_height="172dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="615dp"
        android:background="@drawable/circle_lower_left" />

    <!-- Background circles on the right side -->
    <View
        android:id="@+id/rightCircle1"
        android:layout_width="60dp"
        android:layout_height="190dp"
        android:background="@drawable/circle_upper_right"
        android:layout_marginStart="333dp"
        android:layout_marginTop="190dp" />

    <View
        android:id="@+id/rightCircle2"
        android:layout_width="140dp"
        android:layout_height="205dp"
        android:layout_marginStart="253dp"
        android:layout_marginTop="580dp"
        android:background="@drawable/circle_lower_right" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/appName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="56dp"
                    app:srcCompat="@drawable/journalinkname_txt" />

                <ImageView
                    android:id="@+id/appLogo"
                    android:layout_width="230dp"
                    android:layout_height="215dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/journalink_app_logo" />

                <FrameLayout
                    android:id="@+id/usernameEditTextContainer"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_frame_layout"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <ImageView
                        android:layout_width="29dp"
                        android:layout_height="29dp"
                        android:layout_gravity="start|center_vertical"
                        android:padding="4dp"
                        app:srcCompat="@drawable/username_icon" />

                    <EditText
                        android:id="@+id/usernameEditText"
                        style="@style/CustomEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@null"
                        android:hint="Username / Email"
                        android:textColor="@color/black" />

                </FrameLayout>


                <FrameLayout
                    android:id="@+id/passwordEditTextContainer"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_frame_layout"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <ImageView
                        android:layout_width="29dp"
                        android:layout_height="29dp"
                        android:layout_gravity="start|center_vertical"
                        android:padding="4dp"
                        app:srcCompat="@drawable/password_icon" />

                    <EditText
                        android:id="@+id/passwordEditText"
                        style="@style/CustomEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@null"
                        android:hint="Password"
                        android:textColor="@color/black" />

                </FrameLayout>

                <ImageButton
                    android:id="@+id/loginButton"
                    style="@style/LoginButton"
                    android:src="@null" />


                <TextView
                    android:id="@+id/forgotPasswordText"
                    style="@style/CustomEditTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Forgot Password?"
                    android:textColor="@color/blue"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dontHaveAccountText"
                    style="@style/CustomEditTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:text="Don't have an account?"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/signUpButton"
                    style="@style/SignUpButton"
                    android:text="Sign Up"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textAllCaps="false" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>