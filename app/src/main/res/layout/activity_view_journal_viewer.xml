<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewJournalViewer">

    <ImageButton
        android:id="@+id/shareBUTTON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shareicon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.96"
        app:srcCompat="@null" />

    <ImageButton
        android:id="@+id/closeJournal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/close_btn1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.076"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.065"
        app:srcCompat="@null" />

    <ImageButton
        android:id="@+id/deleteBUTTON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/deletebtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.902"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.943"
        app:srcCompat="@null" />

    <ImageButton
        android:id="@+id/editBUTTON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/editjournalbtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.943"
        app:srcCompat="@null" />

    <ImageView
        android:id="@+id/journalCont"
        android:layout_width="400dp"
        android:layout_height="447dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.297"
        app:srcCompat="@drawable/journal_whitedesign" />

    <TextView
        android:id="@+id/journTitle"
        style="@style/TitleTextStyle"
        android:layout_width="225dp"
        android:layout_height="83dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="327dp"
        android:gravity="center"
        android:textSize="20sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/journalCont"
        app:layout_constraintEnd_toEndOf="@+id/journalCont"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/journalCont"
        app:layout_constraintTop_toTopOf="@+id/journalCont"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/journshortDesc"
        style="@style/TitleTextStyle"
        android:layout_width="223dp"
        android:layout_height="59dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="250dp"
        android:gravity="center"
        android:textSize="14sp"
        android:textStyle="italic"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/journalCont"
        app:layout_constraintEnd_toEndOf="@+id/journalCont"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/journalCont"
        app:layout_constraintTop_toTopOf="@+id/journalCont"
        app:layout_constraintVertical_bias="1.0" />

    <ScrollView
        android:layout_width="223dp"
        android:layout_height="192dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="215dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="39dp"
        app:layout_constraintBottom_toBottomOf="@+id/journalCont"
        app:layout_constraintEnd_toEndOf="@+id/journalCont"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="@+id/journalCont"
        app:layout_constraintTop_toTopOf="@+id/journalCont"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/journContent"
            style="@style/ContentTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textSize="12sp"
            app:autoSizeTextType="none" />
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>