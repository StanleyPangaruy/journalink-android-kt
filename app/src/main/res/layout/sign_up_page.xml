<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <!-- Background circles on the left side -->
    <ImageView
        android:id="@+id/leftCircle1"
        android:layout_width="45dp"
        android:layout_height="190dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/circle_upper_left2"
        app:layout_constraintDimensionRatio="H,19:95"
        app:layout_constraintEnd_toStartOf="@id/leftCircle2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/leftCircle2"
        android:layout_width="155dp"
        android:layout_height="190dp"
        android:layout_marginTop="395dp"
        android:layout_marginEnd="195dp"
        android:background="@drawable/circle_lower_left2"
        app:layout_constraintDimensionRatio="H,31:30"
        app:layout_constraintEnd_toStartOf="@id/rightCircle1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/leftCircle1" />

    <!-- Background circles on the right side -->
    <ImageView
        android:id="@+id/rightCircle1"
        android:layout_width="60dp"
        android:layout_height="190dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/circle_upper_right2"
        app:layout_constraintDimensionRatio="H,4:19"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/leftCircle2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/rightCircle2"
        android:layout_width="60dp"
        android:layout_height="190dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="185dp"
        android:background="@drawable/circle_lower_right2"
        app:layout_constraintDimensionRatio="H,4:19"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/leftCircle2"
        app:layout_constraintTop_toBottomOf="@id/rightCircle1" />

    <!-- returning arrow -->
    <ImageButton
        android:id="@+id/arrow"
        android:layout_width="26dp"
        android:layout_height="27dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/return_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="210dp"
        android:layout_height="205dp"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:scaleType="centerCrop"
        android:src="@drawable/journalink_app_logo"
        app:layout_constraintDimensionRatio="H,42:41"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/signUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/appLogo"
        app:srcCompat="@drawable/sign_up_txt"
        tools:layout_editor_absoluteX="16dp" />

    <ImageButton
        android:id="@+id/registerButton"
        style="@style/RegisterButton"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:src="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.869" />

    <FrameLayout
        android:id="@+id/emailEditTextContainer"
        android:layout_width="330dp"
        android:layout_height="52dp"
        android:background="@drawable/rounded_frame_layout"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_gravity="start|center_vertical"
            android:padding="4dp"
            app:srcCompat="@drawable/email_icon" />

        <EditText
            android:id="@+id/emailEditText"
            style="@style/CustomEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@null"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#000000" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/confirmPasswordEditTextContainer"
        android:layout_width="330dp"
        android:layout_height="52dp"
        android:background="@drawable/rounded_frame_layout"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.72">

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_gravity="start|center_vertical"
            android:padding="4dp"
            app:srcCompat="@drawable/password_icon" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/confirmPasswordTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintAnimationEnabled="false"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/blue">

            <EditText
                android:id="@+id/confirmPasswordEditText"
                style="@style/CustomEditTextStyle"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@android:color/transparent"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </com.google.android.material.textfield.TextInputLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/passwordEditTextContainer"
        android:layout_width="330dp"
        android:layout_height="52dp"
        android:background="@drawable/rounded_frame_layout"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.61">

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_gravity="start|center_vertical"
            android:padding="4dp"
            app:srcCompat="@drawable/password_icon" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintAnimationEnabled="false"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/blue">

            <EditText
                android:id="@+id/passwordEditText"
                style="@style/CustomEditTextStyle"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@android:color/transparent"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </com.google.android.material.textfield.TextInputLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
